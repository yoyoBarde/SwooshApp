<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"

        >
        <shape>
            <solid
                android:color="@color/lalala"/>
            <stroke

                android:width="3dp"
                    android:color="@color/darkGray"
                />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>



    <item  android:state_pressed="false" >

        <shape>
            <solid
                android:color="@color/lalala"
                />
            <stroke

                android:width="3dp"
                android:color="@color/whitef" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

</selector>